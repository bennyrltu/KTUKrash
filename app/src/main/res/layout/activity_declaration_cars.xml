<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DeclarationCars">


    <TextView
        android:id="@+id/Transports"
        android:layout_width="378dp"
        android:layout_height="78dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"
        android:text="Declare vehicles:"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#1eb0c7"
        app:layout_constraintBottom_toTopOf="@+id/yourNumbersHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/otherPersonVehicleHeader"
        android:layout_width="341dp"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:text="Other person's vehicle's registration plate:"
        android:textSize="19dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/secondPersonCar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstPersonCar"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/firstPersonCar"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="20dp"

        android:hint="XXX-000"
        android:inputType="textPersonName"
        android:background="@drawable/numberplate"
        android:paddingStart="55dp"
        android:paddingVertical="5dp"
        android:textSize="55dp"
        app:layout_constraintBottom_toTopOf="@+id/otherPersonVehicleHeader"
        app:layout_constraintEnd_toEndOf="@id/yourNumbersHeader"
        app:layout_constraintStart_toStartOf="@id/yourNumbersHeader"
        app:layout_constraintTop_toBottomOf="@+id/yourNumbersHeader"
        />

    <TextView
        android:id="@+id/yourNumbersHeader"
        android:layout_width="353dp"
        android:layout_height="37dp"
        android:layout_marginBottom="15dp"
        android:text="Your vehicle's registration plate:"
        android:textSize="19dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/firstPersonCar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Transports"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/secondPersonCar"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginBottom="150dp"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="25dp"
        android:hint="XXX-000"
        android:inputType="textPersonName"
        android:background="@drawable/numberplate"
        android:paddingStart="55dp"
        android:paddingVertical="5dp"
        android:textSize="55dp"
        app:layout_constraintBottom_toTopOf="@+id/continueButton"
        app:layout_constraintEnd_toEndOf="@id/otherPersonVehicleHeader"
        app:layout_constraintStart_toStartOf="@id/otherPersonVehicleHeader"
        app:layout_constraintTop_toBottomOf="@+id/otherPersonVehicleHeader"
         />




    <Button
        android:id="@+id/backButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="-35dp"
        android:text="Back"
        android:textSize="20dp"
        android:gravity="center"

        android:drawableStart="@drawable/arrow_left"
        android:drawablePadding="-30dp"
        android:background="@drawable/gradientbackr"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/secondPersonCar"

         />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="-230dp"
        android:text="Next"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@drawable/gradientbackr"
        android:drawablePadding="-15dp"
        android:drawableEnd="@drawable/arrow_right"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="@id/secondPersonCar"
        app:layout_constraintStart_toStartOf="@id/secondPersonCar"

        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/custom_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="10"
        android:max="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/continueButton"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
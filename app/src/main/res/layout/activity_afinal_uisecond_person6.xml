<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".A_FinalUI_6"
    android:background="#ff976e">

    <TextView
        android:id="@+id/insuranceCompany2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Closing remarks:"
        android:textAlignment="center"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@+id/nestedScrollViewa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/insuranceCompany2">

        <EditText
            android:id="@+id/TextInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:gravity="center"
            android:hint=" IN FREE FORM\nVisible damage to vehicle"
            android:inputType="text|textMultiLine"
            android:lineSpacingExtra="5sp"
            android:padding="5dp"
            android:typeface="normal" />

    </androidx.core.widget.NestedScrollView>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollViewa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/nestedScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nestedScrollView">

        <EditText
            android:id="@+id/TextInputa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:gravity="center"
            android:hint=" IN FREE FORM\nMy remarks"
            android:inputType="text|textMultiLine"
            android:lineSpacingExtra="5sp"
            android:padding="5dp"
            android:typeface="normal" />

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/frontButton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="-230dp"
        android:text="Next"
        android:textSize="15dp"
        android:gravity="center"
        android:drawablePadding="-15dp"
        android:background="@drawable/gradientbackr"
        android:drawableRight="@drawable/arrow_right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/backButton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:text="Back"
        android:textSize="15sp"
        android:gravity="center"
        android:drawableLeft="@drawable/arrow_left"
        android:drawablePadding="-30dp"
        android:background="@drawable/gradientbackr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-50dp"
        android:indeterminateDrawable="@drawable/car"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/backButton"

        />
</androidx.constraintlayout.widget.ConstraintLayout>
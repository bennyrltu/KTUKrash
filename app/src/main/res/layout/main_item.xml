<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradientbackr">

            <androidx.cardview.widget.CardView
                android:id="@+id/fpCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="144dp"
                        android:layout_height="144dp"
                        android:layout_below="@id/FPcarnumbertext"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp">

                    </ImageView>

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="144dp"
                        android:layout_height="144dp"
                        android:layout_below="@id/FPcarnumbertext"
                        android:layout_marginStart="195dp"
                        android:layout_marginTop="10dp"></ImageView>

                    <TextView
                        android:id="@+id/FPheaderext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FP header:"
                        android:layout_marginStart="10dp"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp">

                    </TextView>

                    <TextView
                        android:id="@+id/FPnameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/FPheaderext"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/textborder"
                        android:text="FP Name"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:padding="10dp">

                    </TextView>

                    <TextView
                        android:id="@+id/FPlastnameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/FPnameText"
                        android:layout_marginStart="10dp"
                        android:text="FP Last name"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/textborder"
                        android:padding="10dp"
                        >

                    </TextView>

                    <TextView
                        android:id="@+id/FPbirthdateText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/FPlastnameText"
                        android:layout_marginStart="10dp"
                        android:text="FP Birthdate"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/textborder"
                        android:padding="10dp">

                    </TextView>

                    <TextView
                        android:id="@+id/FPphoneText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/FPbirthdateText"
                        android:layout_marginStart="10dp"
                        android:text="FP Phone number"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/textborder"
                        android:padding="10dp">

                    </TextView>

                    <TextView
                        android:id="@+id/FPaddressText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/FPphoneText"
                        android:layout_marginStart="10dp"
                        android:text="FP Address"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/textborder"
                        android:padding="10dp">

                    </TextView>

                    <TextView
                        android:id="@+id/FPemailText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/FPaddressText"
                        android:layout_marginLeft="10dp"
                        android:text="FP Email"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/textborder"
                        android:padding="10dp">

                    </TextView>

                    <TextView
                        android:id="@+id/FPpersonalText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/FPemailText"
                        android:layout_marginStart="10dp"
                        android:text="FP Personal code"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/textborder"
                        android:padding="10dp">

                    </TextView>

                    <TextView
                        android:id="@+id/FPcarnumbertext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/FPpersonalText"
                        android:layout_marginStart="10dp"
                        android:text="FP Car number"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/textborder"
                        android:padding="10dp">

                    </TextView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/spCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fpCard"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="144dp"
                        android:layout_height="144dp"
                        android:layout_below="@id/SPcarnumbertext"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp">

                    </ImageView>

                    <TextView
                        android:id="@+id/SPheaderext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="SP header:"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/SPnameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/SPheaderext"
                        android:layout_marginStart="10dp"
                        android:text="SP Name"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/textborder"
                        android:padding="10dp">>

                    </TextView>

                    <TextView
                        android:id="@+id/SPlastnameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/SPnameText"
                        android:layout_marginStart="10dp"
                        android:text="SP Last name"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/textborder"
                        android:padding="10dp">>

                    </TextView>

                    <TextView
                        android:id="@+id/SPbirthdateText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/SPlastnameText"
                        android:layout_marginStart="10dp"
                        android:text="SP Birthdate"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/textborder"
                        android:padding="10dp">>

                    </TextView>

                    <TextView
                        android:id="@+id/SPphoneText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/SPbirthdateText"
                        android:layout_marginStart="10dp"
                        android:text="SP Phone number"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/textborder"
                        android:padding="10dp">>

                    </TextView>

                    <TextView
                        android:id="@+id/SPaddressText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/SPphoneText"
                        android:layout_marginStart="10dp"
                        android:text="SP Address"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/textborder"
                        android:padding="10dp">>

                    </TextView>

                    <TextView
                        android:id="@+id/SPemailText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/SPaddressText"
                        android:layout_marginStart="10dp"
                        android:text="SP Email"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/textborder"
                        android:padding="10dp">>

                    </TextView>

                    <TextView
                        android:id="@+id/SPpersonalText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/SPemailText"
                        android:layout_marginStart="10dp"
                        android:text="SP Personal code"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/textborder"
                        android:padding="10dp">>

                    </TextView>

                    <TextView
                        android:id="@+id/SPcarnumbertext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/SPpersonalText"
                        android:layout_marginStart="10dp"
                        android:text="SP Car number"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/textborder"
                        android:padding="10dp">>

                    </TextView>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spCard"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="110dp"
                    android:text="Delete"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:textColor="#D92196F3"
                    android:background="@color/white"
                    android:textAllCaps="false" />


                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:text="Edit"
                    android:textColor="#D92196F3"
                    android:background="@color/white"
                    android:textAllCaps="false" />
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".A_FinalUI_4"
    android:background="@drawable/background1">

    <TextView
        android:id="@+id/InsuranceCompany"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:text="Insurance company info:"
        android:textAlignment="center"
        android:textSize="32dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/CompanyName"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Insurance company name"
        android:inputType="textPersonName"
        android:text=""
        android:background="@drawable/edit_round"
        android:drawablePadding="2dp"
        android:padding="5dp"
        android:gravity="left"
        android:layout_marginBottom="-70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/InsuranceCompany" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Policy N°"
        android:inputType="textPersonName"
        android:text=""
        android:background="@drawable/edit_round"
        android:drawablePadding="2dp"
        android:padding="5dp"
        android:gravity="left"
        android:layout_marginBottom="-50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/CompanyName"/>

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Green Card N°"
        android:inputType="textPersonName"
        android:text=""
        android:background="@drawable/edit_round"
        android:drawablePadding="2dp"
        android:padding="5dp"
        android:gravity="left"
        android:layout_marginBottom="-50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/editTextTextPersonName3"/>

    <EditText
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Agency"
        android:inputType="textPersonName"
        android:text=""
        android:background="@drawable/edit_round"
        android:drawablePadding="2dp"
        android:padding="5dp"
        android:gravity="left"
        android:layout_marginBottom="-50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/editTextTextPersonName4"/>

    <EditText
        android:id="@+id/editTextTextPersonName6"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Agency name"
        android:layout_marginBottom="-50dp"
        android:background="@drawable/edit_round"
        android:drawablePadding="2dp"
        android:padding="5dp"
        android:gravity="left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/editTextTextPersonName5"/>

    <EditText
        android:id="@+id/editTextTextPersonName7"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Address"
        android:inputType="textPersonName"
        android:text=""
        android:background="@drawable/edit_round"
        android:drawablePadding="2dp"
        android:padding="5dp"
        android:gravity="left"
        android:layout_marginBottom="-50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/editTextTextPersonName6"/>

    <EditText
        android:id="@+id/editTextTextPersonName8"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Country"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginBottom="-50dp"
        android:background="@drawable/edit_round"
        android:drawablePadding="2dp"
        android:padding="5dp"
        android:gravity="left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/editTextTextPersonName7"/>

    <EditText
        android:id="@+id/editTextTextPersonName9"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textPersonName"
        android:text=""
        android:hint="E-mail:"
        android:layout_marginBottom="-50dp"
        android:background="@drawable/edit_round"
        android:drawablePadding="2dp"
        android:padding="5dp"
        android:gravity="left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/editTextTextPersonName8"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="-50dp"
        android:text="Does the policy cover material damage to the vehicle?"
        android:background="@drawable/edit_round"
        android:drawablePadding="2dp"
        android:padding="5dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/editTextTextPersonName9"
         />

    <Button
        android:id="@+id/frontButton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="-230dp"
        android:text="Next"
        android:textSize="15dp"
        android:gravity="center"
        android:drawablePadding="-15dp"
        android:background="@drawable/gradientbackr"
        android:drawableRight="@drawable/arrow_right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/backButton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:text="Back"
        android:textSize="15sp"
        android:gravity="center"
        android:drawableLeft="@drawable/arrow_left"
        android:drawablePadding="-30dp"
        android:background="@drawable/gradientbackr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-50dp"
        android:indeterminateDrawable="@drawable/car"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/backButton"
        android:layout_marginLeft="-300dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>